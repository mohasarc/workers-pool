{
    "include": ["./lib", "lib/tests"],
    "exclude": ["./node_modules/**/*", "./lib/tests"],
    "lib": [ "es5", "es6", "es7",
        "es2015", "es2016",
        "es2017", "es2018",
        "esnext" ],
        "compilerOptions": {
            "target": "es2017",
            "module": "commonjs",
            "moduleResolution": "Node",
            "outDir": "./dist",
            "rootDir": "./lib/src",
            "declaration": true,
            "declarationMap": true,
            "inlineSourceMap": true,
            "inlineSources": true,
            "esModuleInterop": true, 
            "allowSyntheticDefaultImports": true
        }
}